{
  "name": "@edjl/jira-mcp",
  "version": "1.0.6",
  "description": "Jira tools for MCP (Model Context Protocol)",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "jira-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf build",
